<%= form_with(model: train) do |form| %>
  <%= render 'shared/errors', object: train %>

  <div>
    <%= form.label :number, style: "display: block" %>
    <%= form.text_field :number %>
  </div>

  <div>
    <%= form.label :current_station, "Текущая станция" %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div>
    <%= form.label :current_route, "Текущий маршрут" %>
    <%= form.collection_select :current_route_id, Route.all, :id, :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
