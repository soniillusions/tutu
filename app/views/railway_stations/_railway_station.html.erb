<div class="card mb-2">
  <div class="card-body">
    <h5 class="card-title">
      <%= railway_station.title %>
    </h5>

    <div class="row mb-2">
      <div class="col">
        <img src="<%= asset_path('station') %>" class="img">
      </div>
    </div>

    <% if local_assigns[:position].present? %>
      <p>Порядковый номер: <%= position %></p>
    <% end %>

    <% unless request.path == railway_station_path(railway_station)  %>
      <%= link_to 'Подробнее', railway_station_path(railway_station) %>
    <% end %>
  </div>
</div>