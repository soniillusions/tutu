<h1>Список пользователей</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Администратор</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin? ? "Да" : "Нет" %></td>
        <td>
          <%= link_to "Редактировать", edit_admin_user_path(user) %> |
          <%= link_to "Удалить", admin_user_path(user), method: :delete, data: { confirm: "Точно удалить?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Создать пользователя", new_admin_user_path %>
