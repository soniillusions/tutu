<%= form_with(model: train, url: train.persisted? ? admin_train_path(train) : admin_trains_path, method: train.persisted? ? :patch : :post) do |form| %>
  <%= render 'shared/errors', object: train %>

  <div>
    <%= form.label :number, 'Номер',  style: "display: block" %>
    <%= form.text_field :number, class: "form-control" %>
  </div>

  <div>
    <%= form.label :current_station, "Текущая станция" %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title, {}, { class: "form-select" } %>
  </div>

  <div class="mb-2">
    <%= form.label :current_route, "Текущий маршрут" %>
    <%= form.collection_select :current_route_id, Route.all, :id, :name, {}, { class: "form-select" } %>
  </div>

  <div>
    <%= form.submit 'Сохранить', class: "btn btn-secondary" %>
  </div>
<% end %>
